<div class="min-h-screen bg-gradient-to-br from-orange-50 to-white flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-xl shadow-lg border border-orange-200 p-8">
    <h2 class="text-2xl font-bold text-orange-700 mb-6 text-center drop-shadow">Zaloguj się</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div>
        <%= f.label :email, "Adres e-mail", class: "block text-sm font-semibold text-orange-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@email.com", class: "w-full px-4 py-2 border border-orange-200 rounded-lg focus:ring-2 focus:ring-orange-200 focus:border-orange-500 outline-none transition-all" %>
      </div>

      <div>
        <%= f.label :password, "Hasło", class: "block text-sm font-semibold text-orange-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: "w-full px-4 py-2 border border-orange-200 rounded-lg focus:ring-2 focus:ring-orange-200 focus:border-orange-500 outline-none transition-all" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between">
          <label class="flex items-center">
            <%= f.check_box :remember_me, class: "rounded border-orange-200 text-orange-700 focus:ring-orange-200" %>
            <span class="ml-2 text-sm text-gray-700">Zapamiętaj mnie</span>
          </label>
          <%= link_to "Zapomniałeś hasła?", new_password_path(resource_name), class: "text-sm text-orange-600 hover:text-orange-700 font-semibold" %>
        </div>
      <% end %>

      <%= f.submit "Zaloguj się", class: "w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-2.5 rounded-lg shadow transition-colors" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-700">
      Nie posiadasz konta zgłoski?
      <%= link_to "Zarejestruj się", new_registration_path(resource_name), class: "text-orange-700 hover:text-orange-900 font-semibold transition" %>
    </div>
  </div>
</div>
