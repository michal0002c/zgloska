<div class="bg-gradient-to-br from-orange-50 to-white flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-xl shadow-lg border border-orange-200 p-8">
    <h2 class="text-2xl font-bold text-orange-700 mb-6 text-center drop-shadow">Zarejestruj się</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, "Adres e-mail", class: "block text-sm font-semibold text-orange-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@email.com", class: "w-full px-4 py-2 border border-orange-200 rounded-lg focus:ring-2 focus:ring-orange-200 focus:border-orange-500 outline-none transition-all" %>
      </div>

      <div>
        <%= f.label :username, "Nazwa użytkownika", class: "block text-sm font-semibold text-orange-700 mb-1" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "np. zgłoskowy_wilk", class: "w-full px-4 py-2 border border-orange-200 rounded-lg focus:ring-2 focus:ring-orange-200 focus:border-orange-500 outline-none transition-all" %>
      </div>

      <div>
        <%= f.label :password, "Hasło", class: "block text-sm font-semibold text-orange-700 mb-1" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500 ml-2">(<%= @minimum_password_length %> znaków minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••", class: "w-full px-4 py-2 mt-1 border border-orange-200 rounded-lg focus:ring-2 focus:ring-orange-200 focus:border-orange-500 outline-none transition-all" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Powtórz hasło", class: "block text-sm font-semibold text-orange-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••", class: "w-full px-4 py-2 border border-orange-200 rounded-lg focus:ring-2 focus:ring-orange-200 focus:border-orange-500 outline-none transition-all" %>
      </div>

      <%= f.submit "Zarejestruj się", class: "w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-2.5 rounded-lg shadow transition-colors" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-700">
      Masz już konto?
      <%= link_to "Zaloguj się", new_session_path(resource_name), class: "text-orange-700 hover:text-orange-900 font-semibold transition" %>
    </div>
  </div>
</div>
