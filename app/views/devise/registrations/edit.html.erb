<div class="bg-gradient-to-br from-orange-50 to-white flex items-center justify-center p-4 min-h-screen">
  <div class="max-w-md w-full bg-white border border-orange-200 rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-orange-700 mb-6 text-center">Edytuj dane konta</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, "E-mail", class: "block text-sm font-semibold text-orange-700 mb-1" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 border border-orange-200 rounded-lg" %>
      </div>

      <div>
        <%= f.label :username, "Nazwa użytkownika", class: "block text-sm font-semibold text-orange-700 mb-1" %>
        <%= f.text_field :username, class: "w-full px-4 py-2 border border-orange-200 rounded-lg" %>
      </div>

      <hr class="my-4">

      <h3 class="font-bold mb-2 text-orange-700">Zmiana hasła</h3>
      <div>
        <%= f.label :password, "Nowe hasło", class: "block text-sm font-semibold text-orange-700 mb-1" %>
        <%= f.password_field :password, class: "w-full px-4 py-2 border border-orange-200 rounded-lg" %>
        <div class="text-xs text-gray-500 mb-2">Pozostaw puste, jeśli nie chcesz zmieniać hasła.</div>
      </div>
      <div>
        <%= f.label :password_confirmation, "Powtórz nowe hasło", class: "block text-sm font-semibold text-orange-700 mb-1" %>
        <%= f.password_field :password_confirmation, class: "w-full px-4 py-2 border border-orange-200 rounded-lg" %>
      </div>
      <div>
        <%= f.label :current_password, "Aktualne hasło (wymagane do zapisania zmian)", class: "block text-sm font-semibold text-orange-700 mb-1" %>
        <%= f.password_field :current_password, class: "w-full px-4 py-2 border border-orange-200 rounded-lg" %>
      </div>

      <div class="mt-4">
        <%= f.submit "Zapisz zmiany", class: "w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-2.5 rounded-lg shadow transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
