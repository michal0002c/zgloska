<div class=" bg-gradient-to-br from-orange-50 to-white flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-xl shadow-lg border border-orange-200 p-8">
    <h2 class="text-2xl font-bold text-orange-700 mb-6 text-center drop-shadow">Przypomnij hasło</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, "Adres e-mail", class: "block text-sm font-semibold text-orange-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@email.com", class: "w-full px-4 py-2 border border-orange-200 rounded-lg focus:ring-2 focus:ring-orange-200 focus:border-orange-500 outline-none transition-all" %>
      </div>

      <%= f.submit "Wyślij instrukcje resetowania hasła", class: "w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-2.5 rounded-lg shadow transition-colors" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-700">
      <%= link_to "Powrót do logowania", new_session_path(resource_name), class: "text-orange-700 hover:text-orange-900 font-semibold transition" %>
    </div>
  </div>
</div>
