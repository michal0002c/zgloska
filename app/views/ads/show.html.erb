<div class="bg-orange-50 min-h-screen py-12 rounded-xl">
  <div class="max-w-5xl mx-auto bg-white rounded-xl shadow-xl overflow-hidden rounded-xl">
    <div class="md:flex">
      
      <!-- Główna sekcja -->
      <div class="w-full p-8 md:w-2/3">
        <!-- Tytuł -->
        <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @ad.title %></h1>

        <!-- Opis -->
        <p class="text-gray-700 text-lg mb-6 leading-relaxed">
          <%= @ad.description %>
        </p>

        <!-- Szczegóły -->
        <div class="space-y-4 text-gray-700 text-sm">
          <p><span class="font-semibold text-gray-900">📁 Kategoria:</span> <%= @ad.category %></p>
          <p><span class="font-semibold text-gray-900">📍 Lokalizacja:</span> <%= @ad.location %></p>
          <p><span class="font-semibold text-gray-900">📊 Status:</span> <%= @ad.status %></p>
          <p><span class="font-semibold text-gray-900">📧 Kontakt:</span> <%= @ad.contact_method %></p>
        </div>

        <!-- Powrót -->
        <div class="mt-8 rounded-xl">
          <%= link_to "← Wróć do ogłoszeń", ads_path, class: "inline-block text-orange-600 hover:underline text-sm font-semibold" %>
        </div>
      </div>

      <!-- Prawa kolumna -->
      <div class="w-full bg-orange-100 md:w-1/3 p-6 flex flex-col justify-between">
        <div>
          <!-- Typ -->
          <span class="inline-block mb-4 px-3 py-1 rounded-full text-sm font-medium <%= @ad.ad_type == 'szukam' ? 'bg-blue-200 text-blue-800' : 'bg-green-200 text-green-800' %>">
            <%= @ad.ad_type.capitalize %>
          </span>

          <!-- Budżet -->
          <div class="text-3xl font-bold text-gray-800 mb-2">
            <%= number_to_currency(@ad.budget, unit: "zł") %>
          </div>

          <!-- Data dodania -->
          <div class="text-sm text-gray-600">
            🕒 Dodano: <%= l(@ad.published_at || @ad.created_at, format: :long) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
